{
  "name": "dinoworld",
  "version": "0.1.0",
  "private": true,
  "description": "DinoWorld - Demo Vite + React + Electron (Windows) project",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder --win nsis",
    "package": "electron-builder --dir --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.dinoworld.app",
    "nsis": {
      "oneClick": false
    },
    "files": [
      "dist/**",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}